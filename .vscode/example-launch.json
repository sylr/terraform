{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // How to:
            // Install terraform using the `make quickdev` target
            // Go inside the folder where you have your *.tf files and run the following command
            //   TF_FORK=0 dlv exec --headless --listen=:2345 --api-version=2 --log $(which terraform) -- plan
            // Open VS Code debug pane and run the "Debug Remote" session
            "name": "Debug Remote",
            "type": "go",
            "request": "launch",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceFolder}"
        }
    ]
}
